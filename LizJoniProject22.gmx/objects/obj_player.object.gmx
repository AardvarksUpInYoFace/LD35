else {
    acc = acc_max; // if so decrease the value of acceleration 
    }              //(slows change in direction of movement)



hsp += move * acc // calculate horizonatal speed

if(place_meeting(x, y+2,obj_block)){ 
if hsp &gt; 0 hsp -= acc_min * log10(1+hsp) // calculate drag on movement
if hsp &lt; 0 hsp += acc_min * log10(1+abs(hsp))// both directions
}


if(!place_meeting(x, y+2,obj_block)){ 
if hsp &gt; 0 hsp -= acc_jump/4  * log10(1+(hsp * 4)) // calculate drag on movement
if hsp &lt; 0 hsp += acc_jump/4 * log10(1+(abs(hsp)* 4))// both directions whilst in the air
}


if(hsp &gt; movespeed) hsp = movespeed; // cap max speed
if(hsp &lt; -movespeed) hsp = - movespeed;



if (vsp &lt;10) vsp +=grav; //if not at max grav then increase downward vsp


if(place_meeting(x+hsp,y,obj_block)){       //are we about to hit a will
    while(!place_meeting(x+sign(hsp),y,obj_block)){ //move one pixel forward 
